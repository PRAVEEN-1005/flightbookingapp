[MASTER]
ignore=migrations,templates
load-plugins=pylint_django

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    C0301,  # line-too-long
    R0903,  # too-few-public-methods
    E1101,  # no-member (for Django ORM)
    W0702,  # bare-except
    R0901,  # too-many-ancestors (for Django CBVs)
    C0411,  # wrong-import-order
    R1705,  # no-else-return
    W0201,  # attribute-defined-outside-init
    E0401,  # import-error (for pytest and Django lazy loading)
    E5110

[TYPECHECK]
generated-members=objects,id,DoesNotExist,MultipleObjectsReturned
ignored-modules=pytest,django

[FORMAT]
max-line-length=120
